# Homepage configuration
# Original template written by Lento (https://lento234.ch)
# Source: https://github.com/lento234/homelab/blob/main/roles/containers/server/homer/templates/config.yml.j2 

title: "Homelab"
subtitle: "{{ domain_name }}"
logo: "assets/tools/homer.svg"

header: true
footer: '<p>Made with <i class="fas fa-heart"></i> by <a href="https://uknth.me">Ujjwal Kanth</a>.</p>'

# columns: "3"
connectivityCheck: true

# Optional theme customization
theme: default
colors:
  light:
    highlight-primary: "#3367d6"
    highlight-secondary: "#4285f4"
    highlight-hover: "#5a95f5"
    background: "#f5f5f5"
    card-background: "#ffffff"
    text: "#363636"
    text-header: "#ffffff"
    text-title: "#303030"
    text-subtitle: "#424242"
    card-shadow: rgba(0, 0, 0, 0.1)
    link-hover: "#363636"
  dark:
    highlight-primary: "#2E3440"
    highlight-secondary: "#4C566A"
    highlight-hover: "#81A1C1"
    background: "#3B4252"
    card-background: "#2E3440"
    text: "#D8DEE9"
    text-header: "#D8DEE9"
    text-title: "#81A1C1"
    text-subtitle: "#81A1C1"
    card-shadow: rgba(0, 0, 0, 0.4)
    link-hover: "#BF616A"

# Optional navbar
links:
  - name: "GitHub Repo"
    icon: "fab fa-github"
    url: "https://github.com/uknth/homelab"
    target: "_blank"

# Services
services:
  - name: "Media"
    icon: "fas fa-film"
    items:
      - name: "Shiori"
        logo: "assets/tools/shiori.png"
        subtitle: "Bookmark Manager"
        url: "https://shiori.{{ domain_name }}"
        target: "_blank"

      - name: "Jellyfin"
        logo: "assets/tools/jellyfin.svg"
        subtitle: "Local Media Streaming"
        url: "https://jellyfin.{{ domain_name }}"
        target: "_blank"

      - name: "Navidrome"
        logo: "assets/tools/navidrome.svg"
        subtitle: "Local Music Streaming"
        url: "https://music.{{ domain_name }}"
        target: "_blank"

  - name: "Networking & Storage"
    icon: "fas fa-network-wired"
    items:
      - name: "Tailscale"
        logo: "assets/tools/tailscale.png"
        subtitle: "WireGuard-based VPN"
        url: "https://login.tailscale.com/admin/machines"
        target: "_blank"
        tag: "extern"

      - name: "DNS Hole (Blocky)"
        logo: "assets/tools/blocky.svg"
        subtitle: "Ad Blocker using DNS"
        url: "https://blocky.{{ domain_name }}"
        target: "_blank"

      - name: "Multi WAN Load Balancer"
        logo: "assets/tools/cisco.svg"
        subtitle: "Internet Gateway, Load Balancer"
        url: "https://router-1.{{ domain_name }}"
        target: "_blank"

      - name: "Synolog NAS"
        logo: "assets/tools/synology.svg"
        subtitle: "NAS, Synology"
        url: "https://nas.{{ domain_name }}"
        target: "_blank"

  - name: "Monitoring & Alerting"
    icon: "fas fa-desktop"
    items:
      - name: "Grafana"
        logo: "assets/tools/grafana.svg"
        subtitle: "Monitoring Visualisation"
        url: "https://grafana.{{ domain_name }}"
        target: "_blank"

      - name: "Prometheus"
        logo: "assets/tools/prometheus.svg"
        subtitle: "Monitoring Data Source"
        url: "https://prometheus.{{ domain_name }}"
        target: "_blank"

      - name: "Statping"
        logo: "assets/tools/statping.png"
        subtitle: "Endpoint Monitoring of Domains"
        url: "https://{{ homelab_statping_domain_name }}"
        target: "_blank"
      - name: "Gotify"
        logo: "assets/tools/gotify.svg"
        subtitle: "Alerting System"
        url: "https://{{ homelab_gotify_domain_name }}"
        target: "_blank"

  - name: "Hero"
    icon: "fas fa-mask"
    items:
      - name: "Skooner"
        logo: "assets/tools/skooner.png"
        url: "https://skooner.{{ domain_name }}"
        subtitle: "Visualisation of K3s Cluster"
        target: "_blank"

  - name: "Sidekick"
    icon: "fas fa-cube"
    items:
      - name: "Portainer"
        logo: "assets/tools/portainer.svg"
        subtitle: "Container Monitoring & Management"
        url: "https://portainer.{{ domain_name }}"
        target: "_blank"

  - name: "Workstation"
    icon: "fa fa-briefcase"
    items:
    
      - name: "Portainer [Workstation]"
        logo: "assets/tools/portainer.svg"
        subtitle: "Container Monitoring & Management"
        url: "https://portainer-workstation.{{ domain_name }}"
        target: "_blank"

      - name: "Hound"
        logo: "assets/tools/hound.svg"
        subtitle: "Code Search"
        url: "https://{{ homelab_hound_domain_name }}"
        target: "_blank"