# Homepage configuration
# Original template written by Lento (https://lento234.ch)
# Source: https://github.com/lento234/homelab/blob/main/roles/containers/server/homer/templates/config.yml.j2 

title: "Homelab"
subtitle: "homelab.uknth.me"
logo: "assets/tools/homer.svg"

header: true
footer: '<p>Made with <i class="fas fa-heart"></i> by <a href="https://uknth.me">Ujjwal Kanth</a>.</p>'

# columns: "3"
connectivityCheck: true

# Optional theme customization
theme: default
colors:
  light:
    highlight-primary: "#3367d6"
    highlight-secondary: "#4285f4"
    highlight-hover: "#5a95f5"
    background: "#f5f5f5"
    card-background: "#ffffff"
    text: "#363636"
    text-header: "#ffffff"
    text-title: "#303030"
    text-subtitle: "#424242"
    card-shadow: rgba(0, 0, 0, 0.1)
    link-hover: "#363636"
  dark:
    highlight-primary: "#2E3440"
    highlight-secondary: "#4C566A"
    highlight-hover: "#81A1C1"
    background: "#3B4252"
    card-background: "#2E3440"
    text: "#D8DEE9"
    text-header: "#D8DEE9"
    text-title: "#81A1C1"
    text-subtitle: "#81A1C1"
    card-shadow: rgba(0, 0, 0, 0.4)
    link-hover: "#BF616A"

# Optional navbar
links:
  - name: "GitHub Repo"
    icon: "fab fa-github"
    url: "https://github.com/uknth/homelab"
    target: "_blank"

# Services
services:
  - name: "Media"
    icon: "fas fa-film"
    items:
      - name: "Photoprism"
        logo: "assets/tools/photoprism.svg"
        subtitle: "Photo storage at home"
        url: "http://{{ ansible_hostname }}.{{ domain_name }}:2342"
        target: "_blank"

      - name: "Salt TV"
        logo: "assets/tools/salt-tv.svg"
        subtitle: "Stream TV live and on demand."
        url: "https://tv.salt.ch/"
        target: "_blank"
        tag: "extern"

  - name: "File Storage & Sharing"
    icon: "fas fa-folder"
    items:
      - name: "Transmission"
        logo: "assets/tools/transmission.svg"
        subtitle: "Bittorrent client"
        url: "http://{{ ansible_hostname }}.{{ domain_name }}:9091"
        target: "_blank"

  - name: "Monitoring"
    icon: "fas fa-desktop"
    items:
      - name: "Grafana"
        logo: "assets/tools/grafana.svg"
        subtitle: "Monitoring Visualisation"
        url: "https://grafana.{{ domain_name }}"
        target: "_blank"

      - name: "Prometheus"
        logo: "assets/tools/prometheus.svg"
        subtitle: "Monitoring Data Source"
        url: "https://prometheus.{{ domain_name }}"
        target: "_blank"

      - name: "Portainer"
        logo: "assets/tools/portainer.svg"
        subtitle: "Container Monitoring & Management"
        url: "https://portainer.{{ domain_name }}"
        target: "_blank"

  - name: "Virtualisation"
    icon: "fas fa-cogs"
    items:
      - name: "Proxmox"
        logo: "assets/tools/proxmox.svg"
        url: "https://proxmox.{{ domain_name }}"
        subtitle: "Virtualisation of K3s Cluster"
        target: "_blank"