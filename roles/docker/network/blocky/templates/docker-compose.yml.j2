version: "2.1"
services:
  blocky:
    image: spx01/blocky:v0.24
    container_name: blocky
    restart: unless-stopped
    ports:
      - "53:53/tcp"
      - "53:53/udp"
      - "4000:4000/tcp"
    environment:
      - TZ=Asia/Kolkata # Optional to synchronize the log timestamp with host
      - CONFIG_FILE=/app/config/config.yml
    volumes:
      - ./config/config.yml:/app/config.yml
      - ./blacklists:/app/blacklists
